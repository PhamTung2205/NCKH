            leftIndex = (leftIndex - 1 + leftImages.length) % leftImages.length;
            document.getElementById('left-image').src = `${baseUrl}img/Test/${leftImages[leftIndex]}`;
        } else {
            rightIndex = (rightIndex - 1 + rightImages.length) % rightImages.length;
